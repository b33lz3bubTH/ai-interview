{
  "name": "trpc-eventdriven-microservices",
  "version": "1.0.0",
  "description": "Professional tRPC SDK microservices with event-driven architecture",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "dev:3000": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts --port=3000",
    "dev:3001": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts --port=3001",
    "dev:3002": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts --port=3002",
    "dev:3003": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts --port=3003",
    "dev:multi": "./scripts/run-multiple.sh",
    "start": "node dist/index.js",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "logs:status": "./scripts/log-manager.sh status",
    "logs:cleanup": "./scripts/log-manager.sh cleanup",
    "logs:rotate": "./scripts/log-manager.sh rotate",
    "logs:monitor": "./scripts/log-manager.sh monitor",
    "test:logging": "node scripts/test-logging.js",
    "test:elasticsearch": "node scripts/test-elasticsearch.js",
    "setup:kibana": "node scripts/setup-kibana.js",
    "create:dashboard": "node scripts/create-dashboard.js"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.19.0",
    "@trpc/client": "^10.45.0",
    "@trpc/next": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eventemitter2": "^6.4.9",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "reflect-metadata": "^0.1.13",
    "trpc-playground": "^1.0.4",
    "tsyringe": "^4.8.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-elasticsearch": "^0.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "trpc",
    "microservices",
    "event-driven",
    "typescript",
    "nodejs"
  ],
  "author": "",
  "license": "MIT"
}
